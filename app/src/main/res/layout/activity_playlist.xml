<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistActivity">

    <!-- רקע -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kendrickbackground" />

    <!-- שכבת חפיפה כהה -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#800000AA" />

    <!-- פריסת תוכן -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- הודעה על טעינת פלייליסטים -->
        <TextView
            android:id="@+id/playlist_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading playlists..."
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:paddingBottom="16dp" />

        <!-- ProgressBar לטעינת הנתונים -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!-- הודעת שגיאה -->
        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No playlists found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!-- רשימת הפלייליסטים -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <!-- כפתור מעבר ל-WorkoutSetupActivity -->
        <Button
            android:id="@+id/btnNextWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next: Setup Workout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</FrameLayout>
