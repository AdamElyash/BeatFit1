<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image_activty_workout" />

    <!-- Transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Duration Input -->
        <EditText
            android:id="@+id/duration_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout duration (minutes)"
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text_with_border"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Intensity Input -->
        <EditText
            android:id="@+id/intensity_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout intensity (1-10)"
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text_with_border"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Start Workout Button -->
        <Button
            android:id="@+id/start_workout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Workout"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:textColor="#000000"
            android:padding="12dp"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>
</FrameLayout>
